@using ProjectAnswersAndQuestions.Models;
@model UserLogin;
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{
    ViewData["Title"] = "Login Page";
}

        <div class="MainContainer">
            <div class="MainContent">
                <form asp-action="Login" asp-controller="User"method="POST" id="signup-form" class="signup-form">
                   <div class="logo">
                       <img src="~/images/Logo.png" width=50 height=50>
                   </div>
                 <h2 class="form-title">Welcome to AQ!</h2>
                   <hr align="center" width="300" color="Black" />                 
                     <div class="form-group">
                         <input asp-for="Email" class="form-input" name="email" id="name" placeholder="Your Email" />
                         <span asp-validation-for="Email" style="font-size:15px; font-family:Montserrat" class="text-danger"></span>   
                     </div>
                     <div class="form-group">
                         <input asp-for="UserPassword" class="form-input"  placeholder="Your Password" />
                         <span asp-validation-for="UserPassword" style="font-size:15px; font-family:Montserrat" class="text-danger"></span>
                        <span toggle="#password" class="zmdi zmdi-eye field-icon toggle-password"></span>
                     </div>                  
                    <div class="form-group">
                        <input type="submit" name="submit" id="submit" class="form-submit" value="Login" />
                    </div>
                  <div style="font-size:15px; font-family:Montserrat; text-align:center" class="text-danger">@ViewBag.ErrorText</div>
                </form>

                <p class="loginhere">
                    Haven't already an account ? <a class="loginhere-link" asp-action="Registration">Create account here</a>
                </p>
            </div>           
        </div>





